<div class="backgroundDiv gestionarLiga" ref="backgroundDivGestionar">
  <img src="https://i.gifer.com/YNXo.gif" alt="Background" />
  <h1 class="titulo">GESTIONAR LIGA</h1>
</div>

<script>
  const backgroundDivGestionar = document.querySelector('.gestionarLiga');
  backgroundDivGestionar.addEventListener('click', expandirYDesactivarGestionar);

  function expandirYDesactivarGestionar() {
    expandirDivGestionar();
    ocultarContenidoGestionar();
    backgroundDivGestionar.removeEventListener('click', expandirYDesactivarGestionar); // Desactivar el evento de clic
  }

  function expandirDivGestionar() {
    const expandido = backgroundDivGestionar.classList.toggle('expandido');
    if (expandido) {
      // Agregar un botón si está expandido
      const minimizarBtn = document.createElement('button');
      minimizarBtn.textContent = 'Minimizar';
      minimizarBtn.classList.add('minimizarBtn');
      minimizarBtn.addEventListener('click', minimizarDivGestionar);
      backgroundDivGestionar.appendChild(minimizarBtn);

      backgroundDivGestionar.style.backgroundColor = 'rgba(0, 0, 0, 0.7)'; // Fondo negro con opacidad
    } else {
      // Eliminar el botón si se minimiza
      const minimizarBtn = backgroundDivGestionar.querySelector('.minimizarBtn');
      if (minimizarBtn) {
        minimizarBtn.remove();
      }

      backgroundDivGestionar.style.backgroundColor = 'transparent'; // Restaurar el fondo transparente
    }
  }

  function ocultarContenidoGestionar() {
    backgroundDivGestionar.classList.toggle('oculto');
  }

  function minimizarDivGestionar() {
  const minimizarBtn = backgroundDivGestionar.querySelector('.minimizarBtn');

  if (minimizarBtn) {
    minimizarBtn.remove();
  }

  backgroundDivGestionar.classList.add('encogiendo'); // Agregar clase para activar la animación

  // Esperar a que termine la animación de encogimiento antes de eliminar la clase 'expandido'
  setTimeout(() => {
    backgroundDivGestionar.classList.remove('expandido'); // Eliminar la clase 'expandido' para volver al tamaño estándar
    backgroundDivGestionar.classList.remove('encogiendo'); // Eliminar clase para detener la animación
    ocultarContenidoGestionar();
    
    // Reactivar el evento de clic después de completar la animación
    setTimeout(() => {
      backgroundDivGestionar.addEventListener('click', expandirYDesactivarGestionar);
    }, 500); // Espera 1 segundo, que es la duración de la animación de encogimiento
  }, 1000); // Tiempo de la animación de encogimiento en milisegundos (corresponde a la duración de la transición)
}

</script>

<style>
.backgroundDiv {
  position: fixed;
  width: 15%; /* Cambiado a un valor fijo */
  height: 600px; /* Cambiado a un valor fijo */
  background-size: cover;
  background-position: center;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20px;
  overflow: hidden;
  margin: 400px;
  cursor: pointer;
  transition: background-color 0.5s ease; /* Transición más lenta */
  
}

/* Define la animación */
/* Define la animación */
@keyframes expansion {
  0% {
    width: 10%; /* Comienza con el tamaño original */
    height: 600px;

  }
  100% {
    width: 80vw; /* Termina con el tamaño completo del viewport */
    height: 80vh;
    transform: translate(-40%); /* Mantén el centrado */
  }
}

.backgroundDiv.expandido {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 999;
  animation: expansion 1s cubic-bezier(1, 1, 1, 1) forwards;
}


@keyframes encogimiento {
  0% {
    width: 80vw; /* Termina con el tamaño completo del viewport */
    height: 80vh;
    transform: translateX(-40%);
  }
  100% {
    width: 1%; /* Termina en el tamaño deseado */
    height: 60vh;
    transform: translateX(-4%);
  }
}


/* Aplica la animación al elemento */
.backgroundDiv.encogiendo {
  animation: encogimiento 2s cubic-bezier(0.4, 0, 0.2, 1) forwards; /* Duración de 0.5 segundos y cubic-bezier personalizado */
}




.backgroundDiv img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  filter: blur(0);
}

.backgroundDiv .titulo {
  position: absolute;
  color: orange;
  font-family: 'Arial', sans-serif;
  font-size: 2rem;
  z-index: 1;
  transition: color 0.3s ease;
}

.backgroundDiv.oculto img,
.backgroundDiv.oculto .titulo {
  display: none;
}

.backgroundDiv:hover img {
  filter: blur(5px);
}

.backgroundDiv:hover .titulo {
  color: white;
}

.minimizarBtn {
  position: absolute;
  bottom: 10px;
  left: 50%;
  transform: translateX(-50%);
  display: none; /* Ocultar por defecto */
  padding: 8px 16px;
  background-color: #333;
  color: #fff;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.minimizarBtn:hover {
  background-color: #555;
}
</style>
---
import Card from '../components/Gestionar.astro';
import Crear from '../components/Crear.astro';
import Unirse from '../components/Unirse.astro';
import Panel from '../components/Panel.astro';
import Chat2 from '../components/chat.astro';
---

<div class="centeredContainer">
  <div class="gridContainer">
    <div class="verticalContainer">
      <Crear />
      <Unirse />
    </div>
    <Card />
    <Panel />
  </div>
  <Chat2 />
</div>

<style>
  .centeredContainer {
    display: grid;
    place-items: center;
    padding-top: 180px;
  }

  .gridContainer {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 30px;
    max-width: 4000px;
  }

  .verticalContainer {
    display: grid;
    gap: 3.5vh;
    justify-items: center;
  }

  /* Assuming Card, Panel, and Chat2 components will render with their own styling */
</style>
